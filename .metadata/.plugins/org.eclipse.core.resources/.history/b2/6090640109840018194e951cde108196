package com.java.practise;

public class Pattern_diamond {

	public static void main(String[] args) {

		int space = 3;
		for (int i = 1; i <=space; i++) {
			for (int j = 0; j <=space; j++) {
				System.out.print(" ");
			}
			space--;
			
			for (int k = 1; k <=i; k++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		
		
		
		
		

	}

}
