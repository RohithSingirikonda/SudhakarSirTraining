package com.java.practise;

public class Pattern_diamond {

	public static void main(String[] args) {

		int space = 1, num = 5;
		for (int i = 1; i <=num; i++) {
			for (int j = 1; j <=num; j++) {
				System.out.print(" ");
			}
			space--;
			
			for (int k = 1; k <=i; k++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		
		
		
		
		
		

	}

}
